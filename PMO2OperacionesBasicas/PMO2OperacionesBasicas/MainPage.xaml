<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMO2OperacionesBasicas.MainPage">

    <StackLayout>        <Frame BackgroundColor="green" CornerRadius="0">            <Label Text="Calculadora" HorizontalTextAlignment="Center" TextColor="white" FontSize="34"/>        </Frame>        <Entry x:Name="txtnum1" Placeholder="Ingrese num 1" Keyboard="Numeric" />        <Entry x:Name="txtnum2" Placeholder="Ingrese num 2" Keyboard="Numeric" />        <Entry x:Name="txtresult" Placeholder="Ingrese num 1" />        <Button Text="Sumar" x:Name="btnsumar" Clicked="btnsumar_Clicked"></Button>        <Button Text="Restar" x:Name="btnrestar" Clicked="btnrestar_Clicked"></Button>        <Button Text="Multiplicar" x:Name="btnmultiplicar" Clicked="btnmultiplicar_Clicked" ></Button>        <Button Text="Dividir" x:Name="btndividir" Clicked="btndividir_Clicked"></Button>    </StackLayout>


</ContentPage>
